# Django Environment Configuration
# Copy this file to .env and customize the values

# Debug mode (True for development, False for production)
DEBUG=True

# Database configuration
DATABASE_URL=sqlite:///db.sqlite3

# Cache configuration (Redis URL if using Redis)
# REDIS_URL=redis://localhost:6379/1

# Email configuration
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# AWS S3 configuration (for static and media files)
# Set USE_AWS=False for development to serve files locally
# Set USE_AWS=True for production to use S3
USE_AWS=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# Force SSL redirect (set to True for production with HTTPS)
# Only needed if you want to force HTTPS in non-Heroku environments
FORCE_SSL=False

# Stripe payment keys
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WH_SECRET=

# Security settings
SECRET_KEY=your-secret-key-here
